@page "/C_ProductosEmpaque"

@using JhonAlbertGuzman_P2.Entidades
@using JhonAlbertGuzman_P2.BLL

<EditForm Model="empaque">
    <DataAnnotationsValidator />

    <div class="card">

        <div class="card-header">
            <h3>Consulta de Empaques</h3>
        </div>

        <div class="card-body">

            <form>

                <div class="input-group d-flex align-items-end">
                    <select class="form-control col-2" @bind="Filtro">
                        <option></option>
                        <option value="1">Id</option>
                        <option value="2">Concepto</option>
                    </select>

                    <div class="flex-fill mx-2">
                        <label>Criterio</label>
                        <input type="text" class="form-control" @bind="Criterio" placeholder="Escriba Aqui" />
                    </div>

                    <button type="button" class="btn btn-warning" @onclick="Buscar">
                        <i class="oi oi-magnifying-glass mr-2" /> Buscar
                    </button>
                </div>

            </form>

        </div>

        <table class="table table-secondary">

            <thead class="thead-dark">
                
                <tr class="table-info">
                    <th>Producto Id</th>
                    <th>Concepto</th>
                    <th>Fecha Expiracion</th>
                </tr>
            
            </thead>

            <tbody>

                @foreach (var itemEmpaque in empaque)
                {
                    <tr>
                        <td>@itemEmpaque.EmpaqueId</td>
                        <td>@itemEmpaque.Concepto</td>
                        <td>@itemEmpaque.Fecha?.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
                    
            </tbody>
        </table>

    </div>

</EditForm>



@code {

    public string Filtro { get; set; }
    public string? Criterio { get; set; }
    public List<ProductosEmpaque> empaque { get; set; } = new List<ProductosEmpaque>();

    [Inject]
    public ProductoEmpaqueBLL productosEmpaqueBLL { get; set; }

    private void Buscar()
    {
        if (Criterio != null)
        {
            switch (Filtro)
            {
                case "1":
                    empaque = productosEmpaqueBLL.GetListEmpaque(t => t.EmpaqueId == int.Parse(Criterio));
                break;

                case "2":
                    empaque = productosEmpaqueBLL.GetListEmpaque(t => t.Concepto.ToLower().Contains(Criterio.ToLower()));
                break;

            }
        }
        else
        {
            empaque = productosEmpaqueBLL.GetListEmpaque(t => true);
        }
    }
}